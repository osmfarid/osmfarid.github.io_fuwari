---
import Profile from '@components/molecules/Profile.astro'
import Tag from '@components/molecules/Tags.astro'
import Categories from '@components/molecules/Categories.astro'

const className = Astro.props.class
---
<aside id="sidebar" class:list={[className, "w-full", "hidden md:flex onload-animation  flex-col gap-4"]}>
    <div class="flex flex-col w-full">
        <Profile></Profile>
    </div>
    <div class="flex flex-col w-full gap-4 sticky">
        <Categories class="onload-animation" style="animation-delay: 150ms"></Categories>
        <Tag class="onload-animation" style="animation-delay: 200ms"></Tag>
    </div>
</aside>
